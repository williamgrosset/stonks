generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  user_id        Int     @id @default(autoincrement())
  user_name      String  @unique @db.VarChar(255)
  password       String
  display_name   String? @db.VarChar(255)
  wallet_balance Decimal @default(0.0) @db.Decimal(12, 2)

  stocks              stocks[]
  shares              shares[]
  stock_transactions  stock_transactions[]
  wallet_transactions wallet_transactions[]
}

model stocks {
  stock_id   Int    @id @default(autoincrement())
  user_id    Int
  stock_name String @unique @db.VarChar(255)

  user               users                @relation(fields: [user_id], references: [user_id])
  shares             shares[]
  stock_transactions stock_transactions[]
}

model shares {
  share_id Int @id @default(autoincrement())
  stock_id Int
  user_id  Int
  quantity Int @default(0)

  stock stocks @relation(fields: [stock_id], references: [stock_id])
  user  users  @relation(fields: [user_id], references: [user_id])
}

model stock_transactions {
  transaction_id              Int      @id @default(autoincrement())
  parent_stock_transaction_id Int?
  wallet_transaction_id       Int?     @unique
  stock_id                    Int
  user_id                     Int
  order_status                String
  order_type                  String
  quantity                    Int
  price                       Decimal  @db.Decimal(12, 2)
  time_stamp                  DateTime @default(now()) @db.Timestamptz

  stock              stocks               @relation(fields: [stock_id], references: [stock_id])
  user               users                @relation(fields: [user_id], references: [user_id])
  parent_transaction stock_transactions?  @relation("StockTransactionParent", fields: [parent_stock_transaction_id], references: [transaction_id])
  child_transactions stock_transactions[] @relation("StockTransactionParent")
  wallet_transaction wallet_transactions? @relation(fields: [wallet_transaction_id], references: [transaction_id])
}

model wallet_transactions {
  transaction_id Int      @id @default(autoincrement())
  user_id        Int
  is_debit       Boolean
  amount         Decimal  @db.Decimal(12, 2)
  time_stamp     DateTime @default(now()) @db.Timestamptz

  stock_transaction stock_transactions?
  user              users               @relation(fields: [user_id], references: [user_id])
}
